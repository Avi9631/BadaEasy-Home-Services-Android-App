<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.service.badaeasy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SavedAddressActivity"></activity>
        <activity android:name=".SupportActivity" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".OrderDetailsActivity" />
        <activity android:name=".RewardsActivity" />
        <activity android:name=".BookingDetails" />
        <activity android:name=".CompletedBookingActivity" />
        <activity android:name=".OngoingBookActivity" />
        <activity android:name=".InfoActivity" />
        <activity android:name=".BookingActivity" />
        <activity android:name=".ServicesBuyActivity" />
        <activity android:name=".ServiceItem2Activity" />
        <activity android:name=".ServiceItemActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".AuthActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".FirebaseMessageReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>